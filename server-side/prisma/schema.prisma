generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id      Int   @id @default(autoincrement())
  login   String  @unique
  password String 
  child_name    String
  statistics  Statistics[]
  cards Card[]
}

model Card {
  id  Int   @id @default(autoincrement())
  number  Int
  words Word[]
  user   User @relation(fields: [userId], references: [id])
  userId Int @unique
}

model Word {
  id  Int   @id @default(autoincrement())
  name  String
  image_url String
  letters Int[]
  card  Card @relation(fields: [cardId], references: [id])
  cardId Int @unique
}

model Statistics {
  id      Int   @id @default(autoincrement())
  word    String
  errors_count Int
  user   User @relation(fields: [userId], references: [id])
  userId Int @unique
}

